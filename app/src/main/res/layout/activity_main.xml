<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/ButtonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:src="@drawable/thimble"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:id="@+id/imageView1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_margin="20dp"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.589"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="Наперсток1"
            tools:layout_editor_absoluteX="16dp"/>
    <ImageView
            android:src="@drawable/thimble"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:contentDescription="Напресток2"
            app:layout_constraintStart_toStartOf="@+id/imageView1" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.589"/>


    <ImageView
            android:src="@drawable/thimble"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.589"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>

    <ImageView
            android:src="@drawable/ball"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/imageViewBall"
            android:contentDescription="Игровойшарик"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1" android:layout_margin="0dp"
            app:layout_constraintStart_toStartOf="@+id/imageView1" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView1" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
